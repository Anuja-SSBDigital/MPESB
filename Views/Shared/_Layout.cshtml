@{
    var controller = ViewContext.RouteData.Values["controller"]?.ToString();
    var action = ViewContext.RouteData.Values["action"]?.ToString();

    // Show sidebar only for Home/Index and Home/About
    var showSidebar = (controller == "Home" && (action == "Index" || action == "About"));
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - M.P. Employees Selection Board</title>

    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <link rel="stylesheet"
          href="~/css/site-layout.css"
          asp-append-version="true" />
</head>

<body>

    <!-- ================= TOP HEADER ================= -->
    <div class="top-header">
        <div class="header-container">
            <div class="logo-section">
                <div class="logo-img"></div>
                <div class="logo-text">
                    <h1>मध्य प्रदेश कर्मचारी चयन मंडल</h1>
                    <p>M.P. Employees Selection Board</p>
                </div>
            </div>

            <div class="right-side">
                <div class="contact-section">
                    <div><i class="fas fa-phone"></i> 0755-2578801-02</div>
                    <div>
                        <i class="fas fa-envelope"></i>
                        complaint.esb@mp.gov.in
                    </div>
                    <div><i class="fas fa-phone-alt"></i> 18002337899</div>
                </div>
                <button class="hindi-btn">हिंदी</button>
            </div>
        </div>
    </div>

    <!-- ================= NAVIGATION ================= -->
    <nav class="main-navigation">
        <div class="nav-container">

            <div class="nav-toggle" id="navToggle">
                <i class="fas fa-bars"></i>
            </div>

            <ul>
                <li><a href="@Url.Action("Index", "Home")">HOME</a></li>
                <li><a href="@Url.Action("About", "Home")">ABOUT</a></li>
                <li><a href="@Url.Action("Dashboard", "Home")">DASHBOARD</a></li>
                <li><a href="@Url.Action("OnlineForm", "Home")">ONLINE FORM</a></li>
                <li><a href="@Url.Action("AdmitCard", "Home")">ADMIT CARD</a></li>
                <li><a href="@Url.Action("Results", "Home")">RESULTS</a></li>
                <li><a href="@Url.Action("Contact", "Home")">CONTACT</a></li>
            </ul>

        </div>
    </nav>

    <!-- ================= MAIN CONTAINER ================= -->
    <div class="main-container">

        @* ===== LEFT SIDEBAR (Only for Home Pages) ===== *@
        @if (showSidebar)
        {
            <aside class="left-sidebar">

                <div class="sidebar-box">
                    <div class="sidebar-title">FOR CANDIDATES</div>
                    <ul class="sidebar-menu">
                        <li><a href="@Url.Action("ExamSchedule", "Candidate")">Exam Schedule</a></li>
                        <li><a href="@Url.Action("RuleBook", "Candidate")">Rule Book</a></li>
                        <li><a href="@Url.Action("Statistics", "Candidate")">Statistical Info</a></li>
                        <li><a href="@Url.Action("OldQuestionPaper", "Candidate")">Old Question Paper</a></li>
                        <li><a href="@Url.Action("Objections", "Candidate")">Objections</a></li>
                        <li><a href="@Url.Action("DownloadForms", "Candidate")">Download Forms</a></li>
                        <li><a href="@Url.Action("RTI", "Candidate")">RTI</a></li>
                    </ul>
                </div>

            </aside>
        }

        <!-- ===== CENTER CONTENT ===== -->
        <main class="center-content @(showSidebar ? "" : "full-width")">
            @RenderBody()
        </main>

        @* ===== RIGHT SIDEBAR (Only for Home Pages) ===== *@
        @if (showSidebar)
        {
            <aside class="right-sidebar">

                <div class="sidebar-box">
                    <div class="sidebar-title">ONLINE FORM</div>
                </div>

                <div class="promo-box">
                    <h4>Group-1 (Sub Group -2) Recruitment Test - 2025</h4>
                    <a href="#" class="promo-link">Read More >></a>
                </div>

                <div class="sidebar-box">
                    <div class="sidebar-title">RESULTS</div>
                    <ul class="sidebar-menu">
                        <li>
                            <a href="#">Group-4 Recruitment Test - 2024</a>
                        </li>
                    </ul>
                </div>

            </aside>
        }

    </div>

    <!-- ================= FOOTER ================= -->
    <footer class="footer">
        <p>
            &copy; @DateTime.Now.Year - M.P. Employees Selection Board.
            All Rights Reserved.
        </p>
    </footer>


    <!-- ================= SCRIPTS ================= -->
    @RenderSection("scripts", required: false)

    <script>
        // Hamburger Toggle
        const navToggle = document.getElementById("navToggle");
        const navMenu = document.querySelector(".main-navigation ul");

        if (navToggle && navMenu) {
            navToggle.addEventListener("click", function () {
                navMenu.classList.toggle("active");
            });
        }
    </script>

</body>
</html>
