@{
    var controller = ViewContext.RouteData.Values["controller"]?.ToString();
    var action = ViewContext.RouteData.Values["action"]?.ToString();

    // Show sidebar only for Home/Index and Home/About
    var showSidebar = (controller == "Home" && (action == "Index" || action == "About"));
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - M.P. Employees Selection Board</title>

    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <link rel="stylesheet"
          href="~/css/site-layout.css"
          asp-append-version="true" />
</head>

<body>

    <!-- ================= TOP HEADER ================= -->
    <div class="top-header">
        <div class="header-container">
            <div class="logo-section">
                <div class="logo-img"></div>
                <div class="logo-text">
                    <h1>मध्य प्रदेश कर्मचारी चयन मंडल</h1>
                    <p>M.P. Employees Selection Board</p>
                </div>
            </div>

            <div class="right-side">
                <div class="contact-section">
                    <div><i class="fas fa-phone"></i> 0755-2578801-02</div>
                    <div>
                        <i class="fas fa-envelope"></i>
                        complaint.esb@mp.gov.in
                    </div>
                    <div><i class="fas fa-phone-alt"></i> 18002337899</div>
                </div>
                <button class="hindi-btn">हिंदी</button>
            </div>
        </div>
    </div>

    <!-- ================= NAVIGATION ================= -->
    <nav class="main-navigation" role="navigation" aria-label="Main Navigation">
        <div class="nav-container">

            <div class="nav-toggle" id="navToggle">
                <i class="fas fa-bars"></i>
            </div>

