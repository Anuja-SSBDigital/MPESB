    @RenderSection("scripts", required: false)
    <script>
        // Hamburger menu toggle
        const navToggle = document.getElementById('navToggle');
        const navMenu = document.querySelector('.main-navigation ul');

        if (navToggle && navMenu) {
            navToggle.addEventListener('click', () => {
                navMenu.classList.toggle('active');
                // Optional: change icon to times when open
                navToggle.querySelector('i').classList.toggle('fa-bars');
                navToggle.querySelector('i').classList.toggle('fa-times');
            });
        }

        // Optional: add scrolled class for better sticky look
        window.addEventListener('scroll', () => {
            if (window.scrollY > 80) {
                document.querySelector('.main-navigation').classList.add('scrolled');
            } else {
                document.querySelector('.main-navigation').classList.remove('scrolled');
            }
        });
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const currentPath = window.location.pathname.toLowerCase();
            const sidebarLinks = document.querySelectorAll('.left-sidebar .sidebar-menu a');

            sidebarLinks.forEach(link => {
                const linkPath = link.getAttribute('href').toLowerCase();
                if (currentPath.includes(linkPath) || currentPath === linkPath) {
                    link.classList.add('active');
                }
            });
        });
    </script>
</body>
</html>
