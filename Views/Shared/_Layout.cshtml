        </div>
    </div>

    <!-- Main Navigation -->
    <nav class="main-navigation">
        <ul>
            <li><a href="@Url.Action("Index", "Home")">HOME PAGE</a></li>
            <li><a href="@Url.Action("About", "Home")">ABOUT US</a></li>
            <li><a href="@Url.Action("Dashboard", "Home")">DASHBOARD</a></li>
            <li><a href="@Url.Action("Mission", "Home")">MISSION & VISION</a></li>
            <li><a href="@Url.Action("OnlineForm", "Home")">ONLINE FORM</a></li>
            <li><a href="@Url.Action("AdmitCard", "Home")">ADMIT CARD</a></li>
            <li><a href="@Url.Action("Results", "Home")">RESULTS</a></li>
            <li><a href="@Url.Action("Contact", "Home")">CONTACT US</a></li>
        </ul>
    </nav>

    <!-- Main Container -->
    <div class="main-container">
        <!-- Left Sidebar -->
        <div class="left-sidebar">
            <!-- For Candidates -->
            <div class="sidebar-box">
                <div class="sidebar-title">FOR CANDIDATES</div>
                <ul class="sidebar-menu">
                    <li><a href="@Url.Action("ExamSchedule", "Candidate")">Exam Schedule</a></li>
                    <li><a href="@Url.Action("RuleBook", "Candidate")">Rule Book</a></li>
                    <li><a href="@Url.Action("Statistics", "Candidate")">Statistical Information</a></li>
                    <li><a href="@Url.Action("OldQuestionPaper", "Candidate")">Old Question Paper</a></li>
                    <li><a href="@Url.Action("Objections", "Candidate")">Question Objections / Response Sheet</a></li>
                    <li><a href="@Url.Action("DownloadForms", "Candidate")">Download Forms</a></li>
                    <li><a href="@Url.Action("ImportantNotices", "Candidate")">Important Notices / Advertisement to Candidates</a></li>
                    <li><a href="@Url.Action("RTI", "Candidate")">Right to Information</a></li>
                </ul>
            </div>

            <!-- For Department/Agencies -->
            <div class="sidebar-box">
                <div class="sidebar-title">FOR DEPARTMENT/AGENCIES</div>
                <ul class="sidebar-menu">
                    <li><a href="@Url.Action("Advertisements", "Department")">Advertisements / Notices</a></li>
                    <li><a href="@Url.Action("Tenders", "Department")">Tender/RFP/EoI</a></li>
                    <li><a href="@Url.Action("Forms", "Department")">Performa's & Form's Download</a></li>
                    <li><a href="@Url.Action("GADCircular", "Department")">GAD Group Examination Circular & Other Order</a></li>
                    <li><a href="@Url.Action("WorkWithUs", "Department")">Want to work with us</a></li>
                    <li><a href="@Url.Action("PressRelease", "Department")">Press Release</a></li>
                    <li><a href="@Url.Action("ActViniyam", "Department")">Act and Viniyam</a></li>
                </ul>
            </div>
        </div>

        <!-- Center Content -->
        <div class="center-content">
            <!-- Latest News Ticker -->
            <div class="news-ticker">
                <strong>Latest News :-</strong>
                <marquee behavior="scroll" direction="left">Coming Soon....</marquee>
            </div>

            <!-- Latest Updates -->
            <div class="updates-box">
                <div class="updates-header">
                    Latest Updates
                    <i class="fas fa-plus-circle"></i>
                </div>
                <ul class="updates-list">
                    <li>
                        <i class="fas fa-file-pdf"></i>
                        <a href="#">Admit Card - Group-1 (Sub Group -2) Combined Recruitment Test - 2025</a>
                    </li>
                    <li>
                        <i class="fas fa-file-pdf"></i>
                        <a href="#">Online Question/Answer Objection link- Group2 Sub Group3 Recruitment Test -2025</a>
                    </li>
                    <li>
                        <i class="fas fa-file-pdf"></i>
                        <a href="#">Result - Excise Constable Recruitment Test -2024</a>
                    </li>
                    <li>
                        <i class="fas fa-file-pdf"></i>
                        <a href="#">Result -Asst. Sub-Inspector (Computer) and Head Constable (Computer) Direct Recruitment Test For Police H.Q., Home (Police) -2026 Start From - 05/02/2026 - Rulebook</a>
                    </li>
                    <li>
                        <i class="fas fa-file-pdf"></i>
                        <a href="#">Correction in Primary Teacher Selection Test-2025 form Point 7.7 "पैसे अभ्यर्थी जिन्होने प्राथमिक शिक्षक भर्ती चयन परीक्षा 2025 के आवेदन पत्र की कॉलम 7.7 में गलती से एम.एड. पर हाँ किया है, में संशोधन संबंधी सूचना"</a>
                    </li>
                </ul>
                <a href="#" class="read-more-btn">Read More >></a>
                <div style="clear: both;"></div>
            </div>

            <!-- Welcome Section -->
            <div class="welcome-box">
                <div class="welcome-title">Welcome</div>
                <p class="welcome-text">Welcome to Official website of Madhya Pradesh Employees Selection Board, Bhopal.</p>
            </div>

            <!-- Main Body Content -->
            @RenderBody()

            <!-- Follow Us -->
            <div class="social-box">
                <h3>Follow US</h3>
                <div class="social-icons">
                    <a href="#" class="facebook"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="twitter"><i class="fab fa-twitter"></i></a>
                </div>
            </div>
        </div>

        <!-- Right Sidebar -->
        <div class="right-sidebar">
            <!-- Online Form -->
            <div class="sidebar-box">
                <div class="sidebar-title">ONLINE FORM</div>
            </div>

            <!-- Promotion Box -->
            <div class="promo-box">
                <h4>Group-1 (Sub Group -2) Combined Recruitment Test - 2025</h4>
                <a href="#" class="promo-link">Read More >></a>
                <div style="clear: both;"></div>
            </div>

            <!-- Results -->
            <div class="sidebar-box">
                <div class="sidebar-title">RESULTS</div>
                <ul class="sidebar-menu">
                    <li><a href="#" style="color: #333;">Group-4 Combined Recruitment Test - 2024</a></li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div class="footer">
        <p>&copy; @DateTime.Now.Year - M.P. Employees Selection Board. All rights reserved.</p>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
