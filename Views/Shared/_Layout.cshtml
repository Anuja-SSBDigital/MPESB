            <ul>
                <li>
                    <a href="@Url.Action("Index", "Home")"
                       class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" &&
                                            ViewContext.RouteData.Values["action"]?.ToString() == "Index"
                                            ? "active" : "")">
                        <i class="fas fa-home"></i> HOME PAGE
                    </a>
                </li>

                <li>
                    <a href="@Url.Action("About", "Home")"
                       class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" &&
                                            ViewContext.RouteData.Values["action"]?.ToString() == "About"
                                            ? "active" : "")">
                        <i class="fas fa-info-circle"></i> ABOUT US
                    </a>
                </li>

                <li>
                    <a href="@Url.Action("Dashboard", "Home")"
                       class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" &&
                                            ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard"
                                            ? "active" : "")">
                        <i class="fas fa-tachometer-alt"></i> DASHBOARD
                    </a>
                </li>

                <li>
                    <a href="@Url.Action("Mission", "Home")"
                       class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" &&
                                            ViewContext.RouteData.Values["action"]?.ToString() == "Mission"
                                            ? "active" : "")">
                        <i class="fas fa-bullseye"></i> MISSION & VISION
                    </a>
                </li>

                <li>
                    <a href="@Url.Action("OnlineForm", "Home")"
                       class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" &&
                                            ViewContext.RouteData.Values["action"]?.ToString() == "OnlineForm"
                                            ? "active" : "")">
                        <i class="fas fa-file-alt"></i> ONLINE FORM
                    </a>
                </li>

                <li>
                    <a href="@Url.Action("AdmitCard", "Home")"
                       class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" &&
                                            ViewContext.RouteData.Values["action"]?.ToString() == "AdmitCard"
                                            ? "active" : "")">
                        <i class="fas fa-id-card"></i> ADMIT CARD
                    </a>
                </li>

                <li>
                    <a href="@Url.Action("Results", "Home")"
                       class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" &&
                                            ViewContext.RouteData.Values["action"]?.ToString() == "Results"
                                            ? "active" : "")">
                        <i class="fas fa-check-circle"></i> RESULTS
                    </a>
                </li>

                <li>
                    <a href="@Url.Action("Contact", "Home")"
                       class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" &&
                                            ViewContext.RouteData.Values["action"]?.ToString() == "Contact"
                                            ? "active" : "")">
                        <i class="fas fa-envelope"></i> CONTACT US
                    </a>
                </li>
            </ul>

        </div>
    </nav>

    <!-- ================= MAIN CONTAINER ================= -->
    <div class="main-container">

        @* ===== LEFT SIDEBAR (Only for Home Pages) ===== *@
        @if (showSidebar)
        {
            <aside class="left-sidebar">

                <div class="sidebar-box">
                    <div class="sidebar-title">FOR CANDIDATES</div>
                    <ul class="sidebar-menu">
                        <li><a href="@Url.Action("ExamSchedule", "Candidate")">Exam Schedule</a></li>
                        <li><a href="@Url.Action("RuleBook", "Candidate")">Rule Book</a></li>
                        <li><a href="@Url.Action("Statistics", "Candidate")">Statistical Info</a></li>
                        <li><a href="@Url.Action("OldQuestionPaper", "Candidate")">Old Question Paper</a></li>
                        <li><a href="@Url.Action("Objections", "Candidate")">Objections</a></li>
                        <li><a href="@Url.Action("DownloadForms", "Candidate")">Download Forms</a></li>
                        <li><a href="@Url.Action("RTI", "Candidate")">RTI</a></li>
                    </ul>
                </div>

            </aside>
        }

        <!-- ===== CENTER CONTENT ===== -->
        <main class="center-content @(showSidebar ? "" : "full-width")">
            @RenderBody()
        </main>

        @* ===== RIGHT SIDEBAR (Only for Home Pages) ===== *@
        @if (showSidebar)
        {
            <aside class="right-sidebar">

                <div class="sidebar-box">
                    <div class="sidebar-title">ONLINE FORM</div>
                </div>

                <div class="promo-box">
                    <h4>Group-1 (Sub Group -2) Recruitment Test - 2025</h4>
                    <a href="#" class="promo-link">Read More >></a>
                </div>

                <div class="sidebar-box">
                    <div class="sidebar-title">RESULTS</div>
                    <ul class="sidebar-menu">
                        <li>
                            <a href="#">Group-4 Recruitment Test - 2024</a>
                        </li>
                    </ul>
                </div>

            </aside>
        }

    </div>

    <!-- ================= FOOTER ================= -->
    <footer class="footer">
        <p>
            &copy; @DateTime.Now.Year - M.P. Employees Selection Board.
            All Rights Reserved.
        </p>
    </footer>


    <!-- ================= SCRIPTS ================= -->
    @RenderSection("scripts", required: false)

